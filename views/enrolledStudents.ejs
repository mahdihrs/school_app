<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        Enrolled Students
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
    <h1 style="text-align: center"> <%= subject.subject_name %> </h1>
    <h3 style="text-align: center"><a href="/subjects">return to subject list</a></h3>
    <table style="width:50%" border=1>
        <thead>
            <th>Name</th>
            <th>Score</th>
        </thead>
        <tbody>
            <% subject.dataValues.Students.forEach(s => { %>
                <tr>
                    <td> <%= `${s.first_name} ${s.last_name}` %></td>
                    <% if(!s.StudentSubject.score) { %>
                        <td> <a href="/subjects/<%= s.StudentSubject.id %>/give-score"> Give Score </a></td>
                    <% } else { %>
                        <td> <%= s.StudentSubject.score %></td>
                    <% } %>
                </tr>
                <% }) %>
        </tbody>

    </table>
</body>
</html>