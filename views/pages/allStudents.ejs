<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Semua Murid</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
    <style>
        th, td {
            text-align: center
        }

        table {
            margin: 0 auto
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar') %>
    <br>
    <!-- <h5><a href="/">HOME</a></h5> -->
    <h1 style="text-align: center">Students Data</h1>
    <h5 style="text-align: center"><a href="/students/add">add student</a></h5>
    <hr>
    <br>
    <table style="width:50%" border=1>
        <thead>
            <tr>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th> 
              <th>Email</th>
              <th>Actions</th>
              <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(s => { %>
            <tr>
              <td> <%= s.id %></td>
              <td> <%= s.first_name %> </td> 
              <td> <%= s.last_name %> </td>
              <td> <%= s.email %> </td>
              <td> <a href="/students/<%= s.id %>/add-subject">Add Subject</a> </td>
              <td> <a href="/students/edit/ <%= s.id %>">Edit</a> || <a href="/students/delete/ <%= s.id %>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
            </tr>       
            <% }) %>
        </tbody>
    </table>
</body>
</html>