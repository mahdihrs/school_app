<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Form Edit Data Teacher</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>  
    <%- include('../partials/navbar') %>
    <br>
    <h1 style="text-align: center">Edit Teacher's Data</h1>
    <h5 style="text-align: center"><a href="/teachers">show all data</a></h5>
    <form action="/teachers/edit/<%=teacher.id%>" method="POST">
        <div class="container">
            <p>Please fill in this form to edit data.</p>
            <hr>
            <br>
            <label><b>First Name</b></label>
            <input type="text" value="<%= teacher.first_name %>" name="first_name" required>
            <br>
            <label><b>Last Name</b></label>
            <input type="text" value="<%= teacher.last_name %>" name="last_name" required>
            <br>
            <label><b>email</b></label>
            <input type="text" value="<%= teacher.email %>" name="email" required>
            <br>
            <label><b>SubjectId</b></label>
            <select name="subject">
                <% subjects.forEach(s => { %>
                    <% if(!teacher.SubjectId) { %>
                        <option selected> SELECT </option>
                        <% } else if(teacher.SubjectId === s.id) { %>
                        <option value="<%= s.id %>" selected> <%= s.subject_name %> </option>
                        <% } else { %>
                        <option value="<%= s.id %>"> <%= s.subject_name %> </option>
                        <% } %>
                    <% }) %>
                </select>
            <br>
            <hr>
            <button type="submit" class="registerbtn">Submit</button>
        </div>
    </form>    
</body>
</html>